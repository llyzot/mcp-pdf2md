# MinerU API Configuration
MINERU_API_KEY=your_mineru_api_key_here
MINERU_API_BASE=https://mineru.net/api/v4/extract/task
MINERU_BATCH_API=https://mineru.net/api/v4/extract/task/batch
MINERU_BATCH_RESULTS_API=https://mineru.net/api/v4/extract-results/batch
MINERU_FILE_URLS_API=https://mineru.net/api/v4/file-urls/batch

# Timeout Configuration (in seconds)
# HTTP client timeout for all requests (default: 600 seconds = 10 minutes)
HTTP_CLIENT_TIMEOUT=600

# API request timeout for batch operations (default: 300 seconds = 5 minutes)
API_REQUEST_TIMEOUT=300

# Download timeout for ZIP files (default: 600 seconds = 10 minutes)
DOWNLOAD_TIMEOUT=600

# Status check timeout for polling (default: 60 seconds = 1 minute)
STATUS_CHECK_TIMEOUT=60

# Maximum number of retries for task polling (default: 120 retries)
# With default 5-second interval, this allows up to 10 minutes of polling
TASK_MAX_RETRIES=120

# Seconds between task status checks (default: 5 seconds)
TASK_RETRY_INTERVAL=5

# Output directory for converted files
OUTPUT_DIR=./downloads